<%= turbo_stream.update 'game_current_player_frame' do %>
  <%= render 'games/players_and_current_turn', game: @game %>
<% end %>
<%= turbo_stream.update 'game_board_frame' do %>
    <%= render partial:'board', locals:{ game: @game } %>
<% end %>

<%= turbo_stream.append "body" do %>
  <script>
    setupCardInteractions();
    setupBoardInteractions();
  </script>
  <% if flash[:warning].present? %>
    <script>
      showBoardNotice('<%= j flash[:warning] %>', 'warning');
    </script>
  <% end %>
<% end %>