- content_for :more_head do
  = javascript_pack_tag 'cards', 'data-turbolinks-track': 'reload'
  = render partial:'form_assets'

%div(class="accordion container" id="cards_accordion")
  .row
    .col-4
      %h2.mb-3 
        %span.bi.bi-card-list
        Cards
    .col-8.text-end
      = turbo_frame_tag 'cards_filter_frame' do
        = form_with url: cards_path, method: :get do
          .row
            .col-md-6
              .text-start.input-group.align-items-center
                %a(href="#{cards_path}" data-turbo-action="replace" class="align-middle" style="line-height: 100%;") All Cards
                &nbsp;&nbsp;
                %span(class="input-group-text fw-bold") Keyword 
                = text_field_tag :keyword, params[:keyword], class: 'form-control', placeholder: 'Search by card name, description or number'
            .col.ml-3.mr-3.text-start
              = hidden_field_tag :format, :turbo_stream
              %label{for: 'limit'} Per Page: 
              = select_tag :limit, options_for_select([5, 10, 20, 50, 100], params[:limit] || 20)
              &nbsp;&nbsp;
              = submit_tag 'Search', class: 'btn btn-primary ml-5', disable_with:'Searching ..'
              &nbsp;&nbsp;

  = turbo_frame_tag 'cards_frame' do
    - if current_user.can? :manage, Card
      = render partial:'cards/form', collection: @cards, as: :card
    - else
      = render partial: 'cards/card', collection: @cards, as: :card
    .container
      .align-center.mt-3
        = paginate @cards

= render 'shared/bs/offcanvas'